---
import Nav from '../components/Nav';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='description'
			content='Digital Artist services, accessible for everyone.'
		/>
		<meta
			name='viewport'
			content='width=device-width, initial-scale=1'
		/>
		<!-- cambiar este svg -->
		<link
			rel='icon'
			type='image/svg+xml'
			href='/favicon.svg'
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<meta title={title} />
		<title>{title}</title>
	</head>
	<body class='bg-[#12130F] text-[#EAE6E5]'>
		<main>
			<Nav client:only />
			<slot />
		</main>
	</body>
</html>
