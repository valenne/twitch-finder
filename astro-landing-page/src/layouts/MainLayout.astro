---
import { ViewTransitions } from 'astro:transitions';
import Nav from '../components/section-nav/Nav';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='description'
			content='Digital Artist services, accessible for everyone.'
		/>
		<meta
			name='viewport'
			content='width=device-width, initial-scale=1'
		/>
		<!-- cambiar este svg -->
		<link
			rel='icon'
			type='image/svg+xml'
			href='/twitch.svg'
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<meta title={title} />
		<title>{title}</title>
		<ViewTransitions fallback='animate' />
	</head>
	<body class='bg-[#0e0e10] text-[#dedee3]'>
		<main transition:animate='slide'>
			<Nav client:only />
			<slot />
		</main>
	</body>
</html>
